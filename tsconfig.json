{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "allowJs": true,
    "sourceMap": true,
    // "strict": true,
    "target": "esnext",
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*"
  ]
}
